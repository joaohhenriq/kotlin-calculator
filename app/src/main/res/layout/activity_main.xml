<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#939292"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editShowNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#939292"
        android:ems="10"
        android:gravity="right"
        android:inputType="textPersonName"
        android:paddingTop="10pt"
        android:text="0"
        android:textColor="#ffffff"
        android:textSize="55sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0.5pt">

            <Button
                android:id="@+id/btnClear"
                android:layout_width="30pt"
                android:layout_height="50pt"
                android:layout_marginRight="0.5pt"
                android:layout_weight="1"
                android:background="#D3D3D3"
                android:onClick="btnClickClearEvent"
                android:text="AC"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnPlusMinus"
                android:layout_width="30pt"
                android:layout_height="50pt"
                android:layout_marginRight="0.5pt"
                android:layout_weight="1"
                android:background="#D3D3D3"
                android:onClick="btnClickEvent"
                android:text="+/-"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnPercent"
                android:layout_width="30pt"
                android:layout_height="50pt"
                android:layout_marginRight="0.5pt"
                android:layout_weight="1"
                android:background="#D3D3D3"
                android:onClick="btnClickPercentEvent"
                android:text="%"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnDiv"
                android:layout_width="30pt"
                android:layout_height="50pt"
                android:layout_weight="1"
                android:background="#F47F49"
                android:onClick="btnClickOpEvent"
                android:text="/"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0.5pt">

            <Button
                android:id="@+id/btn7"
                android:layout_width="30pt"
                android:layout_height="50pt"
                android:layout_marginRight="0.5pt"
                android:layout_weight="1"
                android:background="#D3D3D3"
                android:onClick="btnClickEvent"
                android:text="7"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="30pt"
                android:layout_height="50pt"
                android:layout_marginRight="0.5pt"
                android:layout_weight="1"
                android:background="#D3D3D3"
                android:onClick="btnClickEvent"
                android:text="8"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="30pt"
                android:layout_height="50pt"
                android:layout_marginRight="0.5pt"
                android:layout_weight="1"
                android:background="#D3D3D3"
                android:onClick="btnClickEvent"
                android:text="9"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnMult"
                android:layout_width="30pt"
                android:layout_height="50pt"
                android:layout_weight="1"
                android:background="#F47F49"
                android:onClick="btnClickOpEvent"
                android:text="*"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0.5pt">

            <Button
                android:id="@+id/btn4"
                android:layout_width="30pt"
                android:layout_height="50pt"
                android:layout_marginRight="0.5pt"
                android:layout_weight="1"
                android:background="#D3D3D3"
                android:onClick="btnClickEvent"
                android:text="4"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="30pt"
                android:layout_height="50pt"
                android:layout_marginRight="0.5pt"
                android:layout_weight="1"
                android:background="#D3D3D3"
                android:onClick="btnClickEvent"
                android:text="5"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="30pt"
                android:layout_height="50pt"
                android:layout_marginRight="0.5pt"
                android:layout_weight="1"
                android:background="#D3D3D3"
                android:onClick="btnClickEvent"
                android:text="6"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="30pt"
                android:layout_height="50pt"
                android:layout_weight="1"
                android:background="#F47F49"
                android:onClick="btnClickOpEvent"
                android:text="-"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0.5pt">

            <Button
                android:id="@+id/btn1"
                android:layout_width="30pt"
                android:layout_height="50pt"
                android:layout_marginRight="0.5pt"
                android:layout_weight="1"
                android:background="#D3D3D3"
                android:onClick="btnClickEvent"
                android:text="1"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="30pt"
                android:layout_height="50pt"
                android:layout_marginRight="0.5pt"
                android:layout_weight="1"
                android:background="#D3D3D3"
                android:onClick="btnClickEvent"
                android:text="2"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="30pt"
                android:layout_height="50pt"
                android:layout_marginRight="0.5pt"
                android:layout_weight="1"
                android:background="#D3D3D3"
                android:onClick="btnClickEvent"
                android:text="3"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="30pt"
                android:layout_height="50pt"
                android:layout_weight="1"
                android:background="#F47F49"
                android:onClick="btnClickOpEvent"
                android:text="+"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn0"
            android:layout_width="60pt"
            android:layout_height="50pt"
            android:layout_marginRight="0.5pt"
            android:layout_weight="2"
            android:background="#D3D3D3"
            android:onClick="btnClickEvent"
            android:text="0"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnDot"
            android:layout_width="30pt"
            android:layout_height="50pt"
            android:layout_marginRight="0.5pt"
            android:layout_weight="1"
            android:background="#D3D3D3"
            android:onClick="btnClickEvent"
            android:text="."
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnEqual"
            android:layout_width="30pt"
            android:layout_height="50pt"
            android:layout_weight="1"
            android:background="#F47F49"
            android:onClick="btnClickEqualEvent"
            android:text="="
            android:textColor="#FFFFFF"
            android:textSize="24sp" />
    </LinearLayout>

</LinearLayout>